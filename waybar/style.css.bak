* {
  font-family: "Caskaydia Cove Nerd Font", "Font Awesome 6 Free";
  font-size: 13px;
  font-weight: 500;
  color: #dcd7ba;
  background: none;
  border: none;
  box-shadow: none;
  padding: 2px;
}

window#waybar {
  background: transparent;
  border-radius: 12px;
  padding: 6px 10px;
  margin: 6px 12px;
  border: none;
  box-shadow: none;
}

tooltip {
  background: rgba(24, 24, 27, 0.98);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  color: #dcd7ba;
  padding: 8px 12px;
  font-size: 12px;
}

#workspaces {
  padding: 2px 4px;
  margin: 0 4px;
  border-radius: 20px;
  background: rgba(36, 36, 40, 0.8);
}

#workspaces button {
  background: transparent;
  color: #888888;
  margin: 0 2px;
  padding: 4px 8px;
  border-radius: 10px;
  transition: all 0.2s ease;
  font-weight: 600;
}

#workspaces button.active {
  background: rgba(255, 255, 255, 0.12);
  color: #ffffff;
  border-radius: 50px;
  box-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
}

#workspaces button.urgent {
  background: #f38ba8;
  color: #1e1e2e;
  box-shadow: 0 2px 8px rgba(243, 139, 168, 0.3);
}

#workspaces button:hover:not(.active) {
  background: rgba(255, 255, 255, 0.08);
  color: #ffffff;
  border-radius: 50px;
}

#clock,
#battery,
#pulseaudio,
#language,
#tray,
#network,
#custom-media,
#window {
  padding: 4px 12px;
  margin: 0 3px;
  border-radius: 16px;
  background: rgba(36, 36, 40, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.06);
  transition: all 0.2s ease;
}

#window {
  color: #cdd6f4;
  font-weight: 500;
  background: rgba(45, 45, 50, 0.8);
}

#clock {
  font-weight: 600;
  color: #a6e3a1;
}

#clock:hover {
  background: rgba(42, 39, 63, 0.9);
}

#tray {
  padding: 4px 8px;
}

#battery {
  color: #fab387;
}

#battery.good {
  color: #a6e3a1;
}

#battery.charging {
  color: #94e2d5;
  background: rgba(148, 226, 213, 0.1);
}

#battery.critical {
  color: #f38ba8;
  background: rgba(243, 139, 168, 0.1);
  font-weight: 700;
}

#network {
  color: #89b4fa;
}

#network.disconnected {
  color: #f38ba8;
}

#pulseaudio {
  color: #cba6f7;
}

#pulseaudio.muted {
  color: #6c7086;
}

#language {
  color: #f9e2af;
  font-weight: 600;
  min-width: 28px;
}

#custom-media {
  color: #eba0ac;
}

/* Simple hover effects */
#battery:hover,
#pulseaudio:hover,
#language:hover,
#network:hover,
#custom-media:hover {
  background: rgba(42, 39, 63, 0.9);
}
