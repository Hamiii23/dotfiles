#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/.config/ ~/dev ~/.local/bin ~/sandbox -maxdepth 1 -type d |
        fzf --prompt="❯ " \
            --pointer="▶" \
            --border=rounded \
            --height=50% \
            --reverse \
            --preview='ls -la {}' \
            --preview-window=right:50% \
            --color='bg+:#191724,bg:#000000,border:#26233a,fg:#e0def4,header:#908caa,hl+:#eb6f92,hl:#eb6f92,info:#908caa,pointer:#eb6f92,prompt:#eb6f92')
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

# If not in tmux, just cd to the directory
if [[ -z $TMUX ]]; then
    cd "$selected"
    exit 0
fi

# Check if window with this name already exists
if ! tmux list-windows -F "#W" | grep -q "^${selected_name}$"; then
    tmux new-window -n "$selected_name" -c "$selected"
else
    # Switch to existing window
    tmux select-window -t "$selected_name"
fi
